<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_frame_background" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            
            <ImageView 
                android:id="@+id/id_focus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/focus"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id_focus"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:text="我的关注"/>            
            
        </RelativeLayout>
                
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            
            <ImageView 
                android:id="@+id/id_feedback"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/feedback"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id_feedback"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:text="意见反馈"/>            
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            
            <ImageView 
                android:id="@+id/id_help"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/help"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id_help"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:text="帮助"/>            
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            
            <ImageView 
                android:id="@+id/id_about"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/about"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id_about"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:text="关于"/>            
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            
            <ImageView 
                android:id="@+id/id_exit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/exit"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id_exit"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:text="退出"/>            
            
        </RelativeLayout>
        
    </LinearLayout>    
    
</RelativeLayout>
